@model IEnumerable<AuctionProject.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceFinish)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateEnd)
            </td>
            <td>
                    <img src="/Upload/@Html.DisplayFor(modelItem => item.Image)" class="detailImage" style="width: 150px; height: 150px;" />
                @*@Html.DisplayFor(modelItem => item.Image)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceFinish)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>
            <td>
                    <a class="d-flex text-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="d-flex text-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="d-flex text-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
